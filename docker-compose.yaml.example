version: '3.8'

services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    image: twitter-api
    container_name: twitter-api
    environment:
      - DB_NAME=twitter
      - DB_USER=twitter
      - DB_PASSWORD=twitter
      - DB_PORT=5432
      - DB_HOST=db
      - PORT=3300
      
    ports:
      - "${PORT}:${PORT}"
    volumes:
      - .:/app
    depends_on:
      - db

  db:
    image: postgres:latest
    container_name: postgres-container
    environment:
      POSTGRES_DB: twitter
      POSTGRES_USER: twitter
      POSTGRES_PASSWORD: twitter
    ports:
      - "5432:5432"
    volumes:
      - postgres-data:/var/lib/postgresql/data

volumes:
  postgres-data:
